generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName  String
  email     String   @unique
  password  String
  bio       String?
  aboutMe   String?
  credit    Int      @default(20)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  skills    Skill[]

  @@map("users")
}

enum SKILL_LEVEL {
  beginner
  intermediate
  expert
}

model Skill {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  level     SKILL_LEVEL
  userId    String      @db.ObjectId
  user      User        @relation(fields: [userId], references: [id])
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@unique([name, userId])
  @@map("skills")
}

model Learning {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  userId String @db.ObjectId

  @@map("learnings")
}
