generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  skills    Skill[]

  @@map("users")
}

enum SKILL_LEVEL {
  beginner
  intermediate
  expert
}

model Skill {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  level       SKILL_LEVEL
  userId      String      @db.ObjectId
  user        User        @relation(fields: [userId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("skills")
}
